\usepackage[absolute,overlay]{textpos}


\mode<presentation>

%colors
	\definecolor{blue_kuleuven}		{RGB}{17,110,138}			% blue of the university
	\setbeamercolor{normal text}	{fg = blue_kuleuven}		% text color
	\setbeamercolor{frametitle}		{fg=blue_kuleuven}			% frame title color
	\setbeamercolor{section in toc}{fg=blue_kuleuven}			% toc (section) color
	\setbeamercolor{section in toc shaded}{fg=blue_kuleuven}	% toc (shaded section) color
	\setbeamercolor{item}			{fg=blue_kuleuven}			% item color
	\setbeamercolor{subitem}		{fg=blue_kuleuven}			% subitem color
	\setbeamercolor{subsubitem}		{fg=blue_kuleuven}			% subsubitem color
	\setbeamercolor{text}			{fg=white,bg=blue_kuleuven}	% text block color
	\setbeamercolor{block title}{bg=blue_kuleuven,fg=white}		% block title color
	\setbeamercolor{block body}{bg=black!20!white,fg=blue_kuleuven}	% block body color
	
%fonts
	\usefonttheme[onlymath]{serif}							% math font
	\setbeamerfont{frametitle}{size = \bf \large}			% frame title font size
	\setbeamerfont{enumerate item}{size=\Large}				% item symbol font size

%inner theme
	%itemize list
		\setbeamertemplate{itemize item}[ball] 				% item symbol
		\setbeamertemplate{itemize subitem}[ball]			% subitem symbol
	%enumerate list
		\setbeamertemplate{enumerate item}[ball]			% item symbo
		\setbeamertemplate{enumerate subitem}[ball]			% item symboll
	\setbeamertemplate{sections/subsections in toc}[ball]	% toc symbols
	\setbeamersize{text margin left=5mm,text margin right=5mm} % text margins
		
%outer theme
	\setbeamertemplate{navigation symbols}{} % remove the navigation symbols
	%headline	
	\setbeamertemplate{frametitle}{
		\vskip 2mm
		{
			\ifnum \thesection=0
				\insertframetitle
			\else
				\thesection~--~\insertframetitle
			\fi
		}
		\vskip 1mm
		\hrule
	}

	%footline
	\setbeamertemplate{footline}{
		\hspace{-2mm}
		\begin{textblock*}{1.01\paperwidth}(0mm,0.94\paperheight)
			\begin{beamercolorbox}[ht=0.06\paperheight,wd=\paperwidth,center]{block title}
				\insertframenumber \vspace{2mm}
			\end{beamercolorbox}
		\end{textblock*}
		\begin{textblock*}{1.01\paperwidth}(0.78\paperwidth,0.88\paperheight)
			\includegraphics[width=0.18\paperwidth]{kuleuven_CMYK_logo.eps}
		\end{textblock*}
	}
		
%title page
	\setbeamertemplate{title page}
	{
		\begin{textblock*}{\paperwidth}(0mm,0.10\paperheight)
			\begin{beamercolorbox}[ht=0.90\paperheight,wd=\paperwidth,center]{block title}
			\end{beamercolorbox}
		\end{textblock*}
		\begin{textblock*}{0.2\paperwidth}(0.04\paperwidth,0.06\paperheight)
			\includegraphics[width=0.18\paperwidth]{kuleuven_CMYK_logo.eps}
		\end{textblock*}			
		\begin{textblock*}{0.2\paperwidth}(0.06\paperwidth,0.26\paperheight)
			\includegraphics[width=0.18\paperwidth]{sleutel.eps}
		\end{textblock*}
		\begin{textblock*}{0.1\paperwidth}(0.90\paperwidth,0.84\paperheight)
			\includegraphics[height=0.10\paperheight]{sedes.eps}
		\end{textblock*}
		\begin{textblock*}{\paperwidth}(0.32\paperwidth,0.30\paperheight)
			\begin{beamercolorbox}[ht=0.20\paperheight,wd=0.58\paperwidth]{text}
				\huge\inserttitle
			\end{beamercolorbox}
			\begin{beamercolorbox}[ht=0.04\paperheight,wd=0.58\paperwidth]{text}
				\large\insertsubtitle
			\end{beamercolorbox}
			\vspace{5mm}
			\begin{beamercolorbox}[ht=0.04\paperheight,wd=0.58\paperwidth]{text}
				\insertauthor
			\end{beamercolorbox}
			\begin{beamercolorbox}[ht=0.04\paperheight,wd=0.58\paperwidth]{text}
				\insertinstitute
			\end{beamercolorbox}
			\begin{beamercolorbox}[ht=0.04\paperheight,wd=0.58\paperwidth]{text}
				\insertdate
			\end{beamercolorbox}
		\end{textblock*}
		
	}
	
%display toc before each section
\AtBeginSection[] {
	\begin{frame} 
    	\frametitle{Outline} 
    	\vskip 5mm
		\hfill	{\large\parbox {.95\textwidth}{\tableofcontents[currentsection,hideallsubsections]}}
	\end{frame} 
	}
\mode
